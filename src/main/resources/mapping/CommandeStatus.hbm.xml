<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping package="org.jacademie.domain">
    <class name="CommandeStatus" table="COMMANDE_STATUS">
        
        <id name="id" type="integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        
        <property name="label" type="string">
          <column name="LABEL" length="80" not-null="true" />
        </property>
        
    </class>
            
    <query name="CommandeStatus.byLabel">FROM CommandeStatus as status WHERE UPPER(status.label) = :label</query>    
        
</hibernate-mapping>